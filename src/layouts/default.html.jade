!!!
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title= getPreparedTitle()
    meta(name='description', content='#{getPreparedDescription()}') 
    link(rel='alternate', type='application/atom+xml', title='Latest blog posts | troykershaw.com', href='/atom.xml')  
    != getBlock("meta").toHTML()
    != getBlock('styles').add(['/styles/all.min.css']).toHTML()

  body
    #layout.pure-g-r
      .sidebar.pure-u
        header.header.pure-u-1
          #social-menu.pure-menu.pure-menu-open.pure-menu-horizontal
            ul
              li
                a(href='https://github.com/troykershaw')
                  i.icon-github-sign.icon-2x
              li
                a(href='https://twitter.com/troykershaw')
                  i.icon-twitter-sign.icon-2x
              li
                a(href='http://feeds.feedburner.com/TroyKershaw')
                  i.icon-rss-sign.icon-2x
              li
                a(href='mailto:#{site.email}')
                  i.icon-envelope.icon-2x
          hgroup            
            h1.brand-title
              a(href='/')= site.title
            h2.brand-tagline= site.tagline
            t site.shortBio
          nav.nav
            .pure-menu.pure-menu-open
              ul
                each item in site.nav
                  li
                    a.pure-button.nav-button(href='#{item.url}') #{item.name}
      .content.pure-u-1
        != content
        footer.footer
          p &copy; 2013 #{site.title}
    != getBlock('scripts').toHTML()
